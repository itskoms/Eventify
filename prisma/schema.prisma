generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id              Int      @id @default(autoincrement()) // Unique identifier, auto-incrementing integer
  eventId         String   @unique // Unique event identifier (string type)
  guestListId     Int      //unique id for the guest list
  budgetId        Int      //unique id for the budget
  giftRegistryId  Int      //unique id for the gift registry
  name            String   // Name of the event (string type)
  date            DateTime // Date of the event (DateTime type)
  startTime       DateTime @db.Time // Start time of the event (PostgreSQL TIME type)
  endTime         DateTime @db.Time // End time of the event (PostgreSQL TIME type)
  Address         String   // Address of the event
  description     String?  // Description of the event (optional string type)
}
